<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mainBgColor"
    android:layout_height="match_parent"
    style="@style/Theme.Design.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBgColor"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51.6dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center_vertical"
            android:text="접근항목 안내"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:background="@color/bottomColor"
            android:textSize="15.3dp"
            tools:ignore="RtlCompat"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#33ffffff" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.8dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center_vertical"
                android:text="필수 접근 항목"
                android:textColor="#ffffff"
                android:textSize="16.3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.3dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4.8dp"
                android:text="서비스를 이용하시려면 아래 권한에 반드시 동의해 주셔야 합니다"
                android:textColor="#ffffff"
                android:textSize="13.3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.8dp"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center_vertical"
                android:text="카메라"
                android:textColor="#ffffff"
                android:textSize="16.3dp"
                android:typeface="sans" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.3dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center_vertical"
                android:text="기울기 측정"
                android:textColor="#ffffff"
                android:textSize="13.3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.8dp"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center_vertical"
                android:text="인터넷 연결"
                android:textColor="#ffffff"
                android:textSize="16.3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.3dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center_vertical"
                android:text="인터넷 사용"
                android:textColor="#ffffff"
                android:textSize="13.3dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_gravity="center_vertical|center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/exitBtn"
                    android:layout_width="180dp"
                    android:layout_height="46.7dp"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:background="@color/custom_coupon_nor"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="종료"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/nextBtn"
                    android:layout_width="180dp"
                    android:layout_height="46.7dp"
                    android:layout_weight="1"
                    android:background="@color/custom_coupon_nor"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="허용"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>